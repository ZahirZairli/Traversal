@model AccountUnitOfWork
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@if (TempData["error"] != null)
{
    <script type="text/javascript">
        window.onload = function () {
            swal("Xəta", 'Zəhmət olmasa balansınızı artırasınız.Balans: @ViewBag.balance ₼', "error");
        };
    </script>
}
@if (TempData["accountnull"] != null)
{
    <script type="text/javascript">
        window.onload = function () {
            swal("Xəta", 'Qeyd etdiyiniz hesbların id'lərində problem var!Zəhmət olmasa İdlərin düzgünlüyünü yoxlayın.', "error");
        };
    </script>
}
<div class="row">
    <div class="col-xxl">
        <div class="card mb-4">
            <div class="card-header d-flex align-items-center justify-content-between">
                <h5 class="mb-0">Pul göndər</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-icon-default-city">Göndərənin identfikasiyası</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-city" class="input-group-text">
                                    <i class="bx bx-person"></i>
                                </span>
                                <input type="text"
                                       class="form-control"
                                       id="basic-icon-default-city"
                                       placeholder="İd"
                                       aria-label="İd"
                                       aria-describedby="basic-icon-default-city"
                                       asp-for="SenderId" />
                                <span class="text-danger" asp-validation-for="SenderId"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-icon-default-city">Qəbul edənin identfikasiyası</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-city" class="input-group-text">
                                    <i class="bx bx-person"></i>
                                </span>
                                <input type="text"
                                       class="form-control"
                                       id="basic-icon-default-city"
                                       placeholder="İd"
                                       aria-label="İd"
                                       aria-describedby="basic-icon-default-city"
                                       asp-for="ReceiverId" />
                                <span class="text-danger" asp-validation-for="ReceiverId"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-icon-default-city">Məbləğ(₼)</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-city" class="input-group-text">
                                    <i class="bx bx-person"></i>
                                </span>
                                <input type="text"
                                       class="form-control"
                                       id="basic-icon-default-city"
                                       aria-label="Məbləğ"
                                       aria-describedby="basic-icon-default-city"
                                       asp-for="Amount" />
                                <span class="text-danger" asp-validation-for="Amount"></span>
                            </div>
                        </div>
                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row justify-content-end">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">Göndər</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

