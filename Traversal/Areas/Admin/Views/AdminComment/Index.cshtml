@model List<Comment>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var a = 1;
}

<div class="card">
    <h5 class="card-header">Yorumların siyahısı</h5>
    <div class="table-responsive text-nowrap">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>İstifadəçi</th>
                    <th>Tur</th>
                    <th>Tarİx</th>
                    <th>Yorum</th>
                    <th>Sİl</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    <tr>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@a</strong></td>
                        <td>@item.FullName</td>
                        <td>
                            <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-center">
                                <li data-bs-toggle="tooltip"
                                data-popup="tooltip-custom"
                                data-bs-placement="top"
                                class="avatar avatar-xs pull-up"
                                title="@item.Destination.City">
                                <a href="/Destination/Detail/@item.Destination.DestinationId">
                                    <img src="/Traversal-Liberty/assets/images/@item.Destination.Image" onerror="this.src='/Traversal-Liberty/assets/images/user.png'" alt="@item.Content" class="rounded-circle" />
                                </a>
                                </li>
                                <li>
                                    @item.Destination.City
                                </li>
                            </ul>
                        </td>
                        <td>@(((DateTime)item.Date).ToString("dd-MMM-yyyy"))</td>
                        <td>@item.Content</td>
                        <td><a asp-action="Delete" asp-controller="AdminComment" asp-area="Admin" asp-route-id="@item.CommentId"><i class="bx bxs-trash text-danger"></i></a></td>
                        @if (item.Status == true)
                        {
                            <td><span class="badge bg-label-primary me-1">Aktİv</span></td>
                        }
                        else
                        {
                            <td><span class="badge bg-label-danger me-1">Passiv</span></td>
                        }
                    </tr>
                    a++;
                }
            </tbody>
        </table>
    </div>
</div>
