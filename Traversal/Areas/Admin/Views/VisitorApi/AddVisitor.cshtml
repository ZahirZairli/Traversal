@model VisitorApi
@{
    ViewData["Title"] = "AddVisitor";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-xxl">
        <div class="card mb-4">
            <div class="card-header d-flex align-items-center justify-content-between">
                <h5 class="mb-0">Yeni ziyarətçi</h5>
            </div>
            <div class="card-body">
                <div>
                <form method="post">
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-icon-default-city">Ad</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-city" class="input-group-text">
                                    <i class="bx bx-text"></i>
                                </span>
                                <input type="text"
                                       class="form-control"
                                       id="basic-icon-default-city"
                                       placeholder="Ad"
                                       aria-label="Ad"
                                       aria-describedby="basic-icon-default-city"
                                       asp-for="Name" />
                                <span class="text-danger" asp-validation-for="Name"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-icon-default-surname">Soy ad</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-surname" class="input-group-text">
                                    <i class="bx bx-text"></i>
                                </span>
                                <input type="text"
                                       class="form-control"
                                       id="basic-icon-default-surname"
                                       placeholder="Soy ad"
                                       aria-label="Soy ad"
                                       aria-describedby="basic-icon-default-surname"
                                       asp-for="Surname" />
                                <span class="text-danger" asp-validation-for="Surname"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-icon-default-city">Şəhər</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-city" class="input-group-text">
                                    <i class="bx bx-text"></i>
                                </span>
                                <input type="text"
                                       class="form-control"
                                       id="basic-icon-default-city"
                                       placeholder="Şəhər"
                                       aria-label="Şəhər"
                                       aria-describedby="basic-icon-default-city"
                                       asp-for="City" />
                                <span class="text-danger" asp-validation-for="City"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-icon-default-country">Ölkə</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-country" class="input-group-text">
                                    <i class="bx bx-text"></i>
                                </span>
                                <input type="text"
                                       class="form-control"
                                       id="basic-icon-default-country"
                                       placeholder="Ölkə"
                                       aria-label="Ölkə"
                                       aria-describedby="basic-icon-default-country"
                                       asp-for="Country" />
                                <span class="text-danger" asp-validation-for="Country"></span>
                            </div>
                        </div>
                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row justify-content-end">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">Əlavə et</button>
                        </div>
                    </div>
                </form>
            </div>
            </div>
        </div>
    </div>
</div>

