@model PresentationLayer.Areas.Admin.Models.NewGuide
@{
    ViewData["Title"] = "NewGuide";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-xxl">
        <div class="card mb-4">
            <div class="card-header d-flex align-items-center justify-content-between">
                <h5 class="mb-0">Yeni bələdçi</h5>
            </div>
            <div class="card-body">
                <form method="post" enctype="multipart/form-data">
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-icon-default-city">Tam ad</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-city" class="input-group-text">
                                    <i class="bx bx-person"></i>
                                </span>
                                <input type="text"
                                       class="form-control"
                                       id="basic-icon-default-city"
                                       placeholder="Tam ad"
                                       aria-label="Tam ad"
                                       aria-describedby="basic-icon-default-city"
                                       asp-for="FullName" />
                                       <span class="text-danger" asp-validation-for="FullName"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 form-label" for="basic-icon-default-detail">Haqqında</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-detail" class="input-group-text">
                                    <i class="bx bx-comment"></i>
                                </span>
                                <textarea id="basic-icon-default-detail"
                                          class="form-control"
                                          placeholder="Haqqında"
                                          aria-label="Haqqında"
                                          asp-for="Description"
                                          aria-describedby="basic-icon-default-detail"></textarea>
                                <span class="text-danger" asp-validation-for="Description"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 form-label" for="basic-icon-default-image">Şəkİl</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-image" class="input-group-text">
                                    <i class="bx bxs-image-add"></i>
                                </span>
                                <input type="file"
                                       id="basic-icon-default-image"
                                       class="form-control"
                                       placeholder="Şəkil"
                                       aria-label="Şəkil"
                                       asp-for="Image"
                                       aria-describedby="basic-icon-default-image" />
                                <span class="text-danger" asp-validation-for="Image"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 form-label" for="basic-icon-default-detail1">Twitter</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-detail1" class="input-group-text">
                                    <i class="bx bx-comment"></i>
                                </span>
                                <textarea id="basic-icon-default-detail1"
                                          class="form-control"
                                          placeholder="Twitter"
                                          aria-label="Twitter"
                                          asp-for="TwitterUrl"
                                          aria-describedby="basic-icon-default-detail1"></textarea>
                                <span class="text-danger" asp-validation-for="TwitterUrl"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 form-label" for="basic-icon-default-detail2">Instagram</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-detail2" class="input-group-text">
                                    <i class="bx bx-comment"></i>
                                </span>
                                <textarea id="basic-icon-default-detail2"
                                          class="form-control"
                                          placeholder="Instagram"
                                          aria-label="Instagram"
                                          asp-for="InstagramUrl"
                                          aria-describedby="basic-icon-default-detail2"></textarea>
                                <span class="text-danger" asp-validation-for="InstagramUrl"></span>
                            </div>
                        </div>
                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row justify-content-end">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">Əlavə et</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


