@model List<Reservation>
@{
    ViewData["Title"] = "ReservationUser";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var a = 1;
}

<div class="card">
    <h5 class="card-header">@ViewBag.fullname 'in səyahət keçmişi.</h5>
    <div class="table-responsive text-nowrap">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Şəhər</th>
                    <th>Tutum</th>
                    <th>Tarİx</th>
                    <th>Mesaj</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    <tr>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@a</strong></td>
                        <td>
                            <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-center">
                                <li data-bs-toggle="tooltip"
                                data-popup="tooltip-custom"
                                data-bs-placement="top"
                                class="avatar avatar-xs pull-up"
                                title="@item.Destination.City">
                                    <img src="/Traversal-Liberty/assets/images/@item.Destination.Image" onerror="this.src='/Traversal-Liberty/assets/images/user.png'" alt="@item.Description" class="rounded-circle" />
                                </li>
                                <li>
                                    @item.Destination.City
                                </li>
                            </ul>
                        </td>
                        <td>@item.PersonCount</td>
                        <td>@(((DateTime)item.Date).ToString("dd-MMM-yyyy"))</td>
                        <td>@item.Description</td>
                    </tr>
                    a++;
                }
            </tbody>
        </table>
    </div>
</div>

