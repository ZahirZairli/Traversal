@model DTOLayer.DTOs.AnnouncementDTOs.AnnouncementUpdateDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-xxl">
        <div class="card mb-4">
            <div class="card-header d-flex align-items-center justify-content-between">
                <h5 class="mb-0">@Model.Title</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <input type="hidden" asp-for="AnnouncementId" />
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-icon-default-city">Başlıq</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-city" class="input-group-text">
                                    <i class="bx bx-map"></i>
                                </span>
                                <input type="text"
                                       class="form-control"
                                       id="basic-icon-default-city"
                                       placeholder="Başlıq"
                                       aria-label="Başlıq"
                                       aria-describedby="basic-icon-default-city"
                                       asp-for="Title" />
                            </div>
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-icon-default-day">Xəbər</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-day" class="input-group-text">
                                    <i class="bx bxs-time-five"></i>
                                </span>
                                <input type="text"
                                       id="basic-icon-default-day"
                                       class="form-control"
                                       placeholder="Xəbər"
                                       aria-label="Xəbər"
                                       asp-for="Content"
                                       aria-describedby="basic-icon-default-day" />
                            </div>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>
                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row justify-content-end">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">Yadda saxla</button>
                            <a class="btn btn-danger" href="javascript:history.back()">Geri qayıt </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
