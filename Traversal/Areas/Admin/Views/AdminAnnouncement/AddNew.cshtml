@model DTOLayer.DTOs.AnnouncementDTOs.AddAnnouncementDto
@{
    ViewData["Title"] = "AddNew";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-xxl">
        <div class="card mb-4">
            <div class="card-header d-flex align-items-center justify-content-between">
                <h5 class="mb-0">Yeni xəbər</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-icon-default-city">Başlıq</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-city" class="input-group-text">
                                    <i class="bx bx-text"></i>
                                </span>
                                <input type="text"
                                       class="form-control"
                                       id="basic-icon-default-city"
                                       placeholder="Başlıq"
                                       aria-label="Başlıq"
                                       aria-describedby="basic-icon-default-city"
                                       asp-for="Title" />
                                <span class="text-danger" asp-validation-for="Title"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 form-label" for="basic-icon-default-detail2">Xəbər</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-detail2" class="input-group-text">
                                    <i class="bx bx-comment"></i>
                                </span>
                                <textarea id="basic-icon-default-detail2" class="form-control" placeholder="Xəbər" aria-label="Xəbər" asp-for="Content" aria-describedby="basic-icon-default-detail2"></textarea>
                                <span class="text-danger" asp-validation-for="Content"></span>
                            </div>
                        </div>
                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row justify-content-end">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">Əlavə et</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

