@model GetGuideByIdQueryResult
@{
    ViewData["Title"] = "GetGuideById";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-xxl">
        <div class="card mb-4">
            <div class="card-header d-flex align-items-center justify-content-between">
                <h5 class="mb-0">@Model.FullName (CQRS)</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <input type="hidden" asp-for="GuideId" />
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-icon-default-city">Tam ad</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-city" class="input-group-text">
                                    <i class="bx bx-map"></i>
                                </span>
                                <input type="text"
                                       class="form-control"
                                       id="basic-icon-default-city"
                                       placeholder="Tam ad"
                                       aria-label="Tam ad"
                                       aria-describedby="basic-icon-default-city"
                                       asp-for="FullName" />
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 form-label" for="basic-icon-default-detail">Qısa təsvİr</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-detail" class="input-group-text">
                                    <i class="bx bx-comment"></i>
                                </span>
                                <textarea id="basic-icon-default-detail"
                                          class="form-control"
                                          placeholder="Turun qısa təsviri"
                                          aria-label="Turun qısa təsviri"
                                          asp-for="Description"
                                          aria-describedby="basic-icon-default-detail"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="row justify-content-end">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">Yadda saxla</button>
                            <a class="btn btn-danger" href="javascript:history.back()">Geri qayıt </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

