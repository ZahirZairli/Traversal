@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var a = 1;
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<div class="card" style="padding: 5px;">
    @if (TempData["SuccessRole"] != null)
    {
    <div class="alert alert-success alert-dismissible fade show mt-2" role="alert">
        <strong>Yeni vəzifə sistemə uğurla əlavə olundu!</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    }
    @if (TempData["DeleteSuccessRole"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mt-2" role="alert">
            <strong>Vəzifə sistemdən uğurla silindi!</strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    @if (TempData["DeleteErrorRole"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show mt-2" role="alert">
            <strong>Xəta!</strong>
            Əməliyyat baş tutmadı!
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    <h5 class="card-header">Vəzifələrin siyahısı</h5>
    <a href="/Admin/Role/NewRole" class="btn btn-outline-warning">Yeni vəzifə</a>
    <div class="table-responsive text-nowrap">
        @if (TempData["NoRole"] != null)
        {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Vəzifə</th>
                        <th>Parametrlər</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@a</strong></td>
                            <td>@item.Name</td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" asp-controller="Role" asp-action="Edit" asp-route-id="@item.Id" asp-area="Admin"><i class="bx bx-edit-alt me-1"></i> Güncəllə</a>
                                        <a class="dropdown-item" asp-controller="Role" asp-action="Delete" asp-route-id="@item.Id" asp-area="Admin"><i class="bx bx-trash me-1"></i> Sil</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        a++;
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-warning alert-dismissible fade show mt-2" role="alert">
                <strong>Sistemdə aktiv vəzifə yoxdur!</strong>
                Zəhmət olmasa yeni vəzifə əlavə edin!
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
    </div>
</div>
