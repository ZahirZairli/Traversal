@model AppRole
@{
    ViewData["Title"] = "NewRole";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-xxl">
        <div class="card mb-4">
            <div class="card-header d-flex align-items-center justify-content-between">
                <h5 class="mb-0">Yeni vəzifə</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-icon-default-city">Vəzİfə adı</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-city" class="input-group-text">
                                    <i class="bx bx-person"></i>
                                </span>
                                <input type="text"
                                       class="form-control"
                                       id="basic-icon-default-city"
                                       placeholder="Ad"
                                       aria-label="Ad"
                                       aria-describedby="basic-icon-default-city"
                                       asp-for="Name" />
                                <span class="text-danger" asp-validation-for="Name"></span>
                            </div>
                        </div>
                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row justify-content-end">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-outline-primary">Əlavə et</button>
                            <a href="javascript:history.back()" class="btn btn-outline-danger">Geri qayıt</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

