@model List<UserRoles>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-xxl">
        <div class="card mb-4">
            <div class="card-header d-flex align-items-center justify-content-between">
                <h5 class="mb-0">@ViewBag.username' in vəzifəsi</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    @foreach (var item in Model)
                    {
                        <div class="form-check">
                            <input type="hidden" asp-for="@item.RoleId"/>
                            <label class="form-check-label" asp-for="@item.RoleName">@item.RoleName</label>
                            <input type="checkbox" class="form-check-input" asp-for="@item.RoleExist"/>
                        </div>
                    }
                    <br />
                    <button type="submit" class="btn btn-outline-warning">Yadda saxla</button>
                    <a href="javascript:history.back()" class="btn btn-outline-danger">Geri qayıt</a>
                </form>
            </div>
        </div>
    </div>
</div>