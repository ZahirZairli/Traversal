@using EntityLayer.Concrete
@model List<Guide>
<div class="col-12 col-xl-4">
    <div class="card h-100">
        <div class="card-header pb-0 p-3">
            <h6 class="mb-0">Bələdçilər</h6>
        </div>
        <div class="card-body p-3">
            <ul class="list-group">
                @foreach (var item in Model)
                {
                    <li class="list-group-item border-0 d-flex align-items-center px-0">
                        <div class="avatar me-3">
                            <img onerror="this.src='/Images/user.png'" src="/Images/@item.Image" alt="@item.FullName" class="border-radius-lg shadow">
                        </div>
                        <div class="d-flex align-items-start flex-column justify-content-center">
                            <h6 class="mb-0 text-sm">@item.FullName</h6>
                            <p class="mb-0 text-xs">@item.Description</p>
                        </div>
                        <a class="btn btn-link pe-3 ps-0 mb-0 ms-auto" href="javascript:;">Profİl</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>

