@using X.PagedList
@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common;
@using EntityLayer.Concrete
@model IPagedList<Destination>
@{
    ViewData["Title"] = "Index";
    ViewData["page"] = "tur";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    var a = 1;
}
<div class="row">
    <div class="col-12">
        <div class="card mb-4">
            <div class="card-header pb-0">
                <h6>Aktiv turlar</h6>
                <hr />
            </div>
            <div class="card-body px-0 pt-0 pb-2">
                <div class="table-responsive p-0">
                    <table class="table align-items-center mb-0">
                        <thead>
                            <tr>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">#</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Şəhər</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Vaxt</th>
                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Tutum</th>
                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Qiymət</th>
                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Ətraflı</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th class="align-middle text-center">
                                        <span class="text-secondary text-xs font-weight-bold">@a</span>
                                    </th>
                                    <td>
                                        <div class="d-flex px-2 py-1">
                                            <div>
                                                <img src="/Images/@item.Image" class="avatar avatar-sm me-3" alt="user2">
                                            </div>
                                            <div class="d-flex flex-column justify-content-center">
                                                <h6 class="mb-0 text-sm">@item.City</h6>
                                                <p class="text-xs text-secondary mb-0">@item.Description</p>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="align-middle text-center">
                                        <span class="text-secondary text-xs font-weight-bold">@item.DayNight</span>
                                    </td>
                                    <td class="align-middle text-center">
                                        <span class="text-secondary text-xs font-weight-bold">@item.Capacity</span>
                                    </td>
                                    <td class="align-middle text-center">
                                        <span class="text-secondary text-xs font-weight-bold">₼ @item.Price</span>
                                    </td>
                                    <td class="align-middle text-center">
                                        <a href="/Destination/Detail/@item.DestinationId" class="btn btn-outline-primary">
                                            Bax
                                        </a>
                                    </td>
                                </tr>
                                a++;
                            }
                        </tbody>
                    </table>
                </div>
                <div class="container mt-4">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), new PagedListRenderOptions
                    {
                    DisplayLinkToFirstPage = PagedListDisplayMode.IfNeeded,
                    DisplayLinkToLastPage = PagedListDisplayMode.IfNeeded,
                    DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                    DisplayLinkToNextPage = PagedListDisplayMode.Always,
                    LinkToFirstPageFormat = "<<",
                    LinkToPreviousPageFormat = "<",
                    LinkToNextPageFormat = ">",
                    LinkToLastPageFormat = ">>",
                    MaximumPageNumbersToDisplay = 5,
                    ContainerDivClasses = new[] { "pagination", "justify-content-center" },
                    UlElementClasses = new[] { "pagination" },
                    LiElementClasses = new[] { "page-item" },
                    PageClasses = new[] { "page-link" },
                    })
                </div>
            </div>
        </div>
    </div>
</div>
