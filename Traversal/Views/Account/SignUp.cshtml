@model PresentationLayer.Models.UserRegisterViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="zxx">
<head>
	<title>Qeydiyyat</title>
	<link rel="icon" type="image/png" href="/Login_v1/images/icons/favicon.ico" />
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta charset="UTF-8" />
	<meta name="keywords"
		  content="Invent Signup Form Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template, Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
	<script>
		addEventListener("load", function () {
			setTimeout(hideURLbar, 0);
		}, false);

		function hideURLbar() {
			window.scrollTo(0, 1);
		}
    </script>
    <link href="~/register/css/style.css" rel="stylesheet" />
	<link rel="stylesheet" href="~/Register/css/style.css" type="text/css" media="all" />
	<style>
		span{
			color: red;
		}
	</style>
</head>

<body>
	<section class="w3l-login-6">
		<div class="login-hny">
			<div class="form-content">
				<div class="form-right">
					<div class="overlay">
						<div class="grid-info-form">
							<h5>Traversal</h5>
							<h3>Yenİ Hesab</h3>
							<p>
								Səyahət etmək təkcə yeniləri görmək deyil, həm də geridə qoymaqdır. Təkcə qapıları açmaq deyil, həm də onları arxanızda bağlamaq, bir daha geri qayıtmamaqdır.
							</p>
							<a href="/Account/Login" class="read-more-1 btn">Hesabınıza daxİl olun</a>
						</div>
					</div>
				</div>
				<div class="form-left">
					<div class="middle">
						<h4>Bizə qoşulun</h4>
						<p>Qeydiyyatdan keçin.</p>
					</div>
					<form method="post" class="signin-form">
						<div class="form-input">
							<label>Ad</label>
							<input type="text" asp-for="Name" />
							<span asp-validation-for="Name"></span>
						</div>
						<div class="form-input">
							<label>Soyad</label>
							<input type="text" asp-for="Surname" required />
							<span asp-validation-for="Surname"></span>
						</div>
						<div class="form-input">
							<label>İstifadəçi adı</label>
							<input type="text" asp-for="UserName" required />
							<span asp-validation-for="UserName"></span>
						</div>
						<div class="form-input">
							<label>Email</label>
							<input type="email" asp-for="Mail" required />
							<span asp-validation-for="Mail"></span>
						</div>
						<div class="form-input">
							<label>Telefon</label>
							<input type="tel" asp-for="Phone" required />
							<span asp-validation-for="Phone"></span>
						</div>
						<div class="form-input">
							<label>Şifrə</label>
							<input type="password" asp-for="Password"/>
							<span asp-validation-for="Password"></span>
						</div>
						<div class="form-input">
							<label>Təkrar şifrə</label>
							<input type="password" asp-for="ConfirmPassword"/>
							<span asp-validation-for="ConfirmPassword"></span>
						</div>
						<label class="container">
							Qaydaları oxudum və razıyam
							<input type="checkbox">
							<span class="checkmark"></span>
						</label>
						<button class="btn">Qeydİyyatdan keç</button>
						<div style="color: red;margin-top: 5px;" asp-validation-summary="ModelOnly"></div>
					</form>
					<div class="copy-right text-center">
						<p>
							© @DateTime.Now.Year. Bütün hüquqlar qorunur | Hazırladı
							<a href="http://zahirzairli.com/" target="_blank">Zahir Zairli</a>
						</p>
					</div>
				</div>
			</div>
		</div>
	</section>
</body>
</html>