                            </div>
                        </li>
                    </ul>
                </div>
                <div class="d-lg-block d-none">
                    <a href="/Member/ReservationUser/NewReservation" class="btn btn-style btn-secondary">@localizer["Rezervasiya et"]</a>
                </div>
                <!-- toggle switch for light and dark theme -->
                <div class="mobile-position">
                    <nav class="navigation">
                        <div class="theme-switch-wrapper">
                            <label class="theme-switch" for="checkbox">
                                <input type="checkbox" id="checkbox">
                                <div class="mode-container">
                                    <i class="gg-sun"></i>
                                    <i class="gg-moon"></i>
                                </div>
                            </label>
                        </div>
                    </nav>
                </div>
            </nav>
        </div>
    </header>
    @RenderBody()
    @*@await Html.PartialAsync("/Views/SiteLayoutPartial/_FooterPartial.cshtml")*@
    <footer>
