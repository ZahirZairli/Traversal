                        <li class="nav-item">
                            <a class="nav-link" href="/Destination/Index">@localizer["Turlar"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Guide/Index">@localizer["Bələdçilər"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Contact/Index">@localizer["Əlaqə"]</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown1" role="button" data-toggle="dropdown"
