            <div class="w3l-footer-16-main py-5">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-6 column">
                            <div class="row">
                                <div class="col-md-4 column">
                                    <h3>@localizer["Şirkətimiz"]</h3>
                                    <ul class="footer-gd-16">
                                        <li><a href="/Default/Index">@localizer["Ana Səhifə"]</a></li>
                                        <li><a href="#">@localizer["Haqqımızda"]</a></li>
                                        <li><a href="/Destination/Index">@localizer["Turlar"]</a></li>
                                        <li><a href="#">@localizer["Xidmətlər"]</a></li>
                                        <li><a href="#">@localizer["Əlaqə"]</a></li>
                                    </ul>
                                </div>
                                <div class="col-md-4 column mt-md-0 mt-4">
                                    <h3>@localizer["Faydalı linklər"]</h3>
                                    <ul class="footer-gd-16">
                                        <li><a href="#url">@localizer["Hava yolları"]</a></li>
                                        <li><a href="#url">@localizer["Xəstaxanalar"]</a></li>
                                        <li><a href="#url">@localizer["Pul Dəyişmə Məntəqələri"]</a></li>
                                        <li><a href="#">@localizer["Turizim ofisi"]</a></li>
                                        <li><a href="#url">@localizer["Bizə yazın"]</a></li>
                                    </ul>
                                </div>
                                <div class="col-md-4 column mt-md-0 mt-4">
                                    <h3>@localizer["Xidmətlərimiz"]</h3>
                                    <ul class="footer-gd-16">
                                        <li><a href="#url">@localizer["Servisler"]</a></li>
                                        <li><a href="#url">@localizer["Ring səfərləri"]</a></li>
                                        <li><a href="/Guide/Index">@localizer["Bələdçilərimiz"]</a></li>
                                        <li><a href="#">@localizer["Azərbaycan ofisi"]</a></li>
                                        <li><a href="#url">@localizer["Türkiyə ofisi"]</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-12 column pl-lg-5 column4 mt-lg-0 mt-5">
                            <h3>@localizer["Email bülleteni"]</h3>
                            <div class="end-column">
                                <h4>@localizer["Son kompaniyalardan xəbardar olun."]</h4>
                                <form action="#" class="subscribe" method="post">
                                    <input type="email" name="email" placeholder="@localizer["Email Adresi"]" required="">
                                    <button type="submit">@localizer["Abonə ol"]</button>
                                </form>
                                <p>@localizer["Kompaniyalardan xəbərdar olmaq üçün abonə olun.Spam mesajlar almayacaqsınız"].</p>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex below-section justify-content-between align-items-center pt-4 mt-5">
                        <div class="columns text-lg-left text-center">
                            <p>
                                @DateTime.Now.Year Traversal.@localizer["Bütün hüquqlar qorunur"]<a href="https://zahirzairli.com/" target="_blank">
                                    Zahir Zairli
                                </a>
                            </p>
                        </div>
                        <div class="columns-2 mt-lg-0 mt-3">
                            <ul class="social">
                                <li>
                                    <a href="#facebook"><span class="fa fa-facebook" aria-hidden="true"></span></a>
                                </li>
                                <li>
                                    <a href="#linkedin"><span class="fa fa-linkedin" aria-hidden="true"></span></a>
                                </li>
                                <li>
                                    <a href="#twitter"><span class="fa fa-twitter" aria-hidden="true"></span></a>
                                </li>
                                <li>
                                    <a href="#google"><span class="fa fa-google-plus" aria-hidden="true"></span></a>
                                </li>
                                <li>
                                    <a href="#github"><span class="fa fa-github" aria-hidden="true"></span></a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <!-- move top -->
            <button onclick="topFunction()" id="movetop" title="Go to top">
                <span class="fa fa-angle-up"></span>
            </button>
            <script>
                // When the user scrolls down 20px from the top of the document, show the button
                window.onscroll = function () {
                    scrollFunction()
                };
                function scrollFunction() {
                    if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
                        document.getElementById("movetop").style.display = "block";
                    } else {
                        document.getElementById("movetop").style.display = "none";
                    }
                }
                // When the user clicks on the button, scroll to the top of the document
                function topFunction() {
                    document.body.scrollTop = 0;
                    document.documentElement.scrollTop = 0;
                }
            </script>
            <!-- //move top -->
            <script>
                $(function () {
                    $('.navbar-toggler').click(function () {
                        $('body').toggleClass('noscroll');
                    })
                });
            </script>
        </section>
    </footer>
    @await Html.PartialAsync("/Views/SiteLayoutPartial/_ScriptPartial.cshtml")
</body>
</html>