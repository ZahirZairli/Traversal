                                @localizer["Dil"]<span class="fa fa-angle-down"></span>
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown1">
                                <a class="dropdown-item" asp-route-culture="az">@localizer["Azərbaycan"]  <img style="width: 30px !important;" src="/Images/azerbaijan.png"/></a>
                                <a class="dropdown-item" asp-route-culture="en">@localizer["İngilis"]  <img style="width: 30px !important;" src="/Images/english.png" /></a>
