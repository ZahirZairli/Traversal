@using EntityLayer.Concrete
@model List<Feature>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
<div class="best-rooms py-5">
    <div class="container py-md-5">
        <div class="ban-content-inf row">
            <div class="maghny-gd-1 col-lg-6">
                <div class="maghny-grid">
                    <figure class="effect-lily border-radius  m-0">
                        <img class="img-fluid" src="/Traversal-Liberty/assets/images/@ViewBag.image" alt="@ViewBag.title" />
                        <figcaption>
                            <div>
                                <h4>@ViewBag.title</h4>
                                    <p>@ViewBag.des </p>
                            </div>
                        </figcaption>
                    </figure>
                </div>
            </div>
            <div class="maghny-gd-1 col-lg-6 mt-lg-0 mt-4">
                <div class="row">
                        @{var a = 1;}
                    @foreach (var item in Model)
                    {
                        <div id="div_@a" class="maghny-gd-1 col-6">
                            <div class="maghny-grid">
                                <figure class="effect-lily border-radius">
                                    <img class="img-fluid" src="/Traversal-Liberty/assets/images/@item.Image" alt="@item.Title" />
                                    <figcaption>
                                        <div>
                                            <h4>@item.Title</h4>
                                            <p>@item.Description</p>
                                        </div>
                                    </figcaption>
                                </figure>
                            </div>
                        </div>
                        a++;
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function loadDiv() {
        var element = document.getElementById("div_3");
        element.classList.add("mt-4");
        var element2 = document.getElementById("div_4");
        element2.classList.add("mt-4");
    }
    loadDiv();
</script>

